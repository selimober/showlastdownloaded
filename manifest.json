{
    "manifest_version": 2,

    "name": "Show in File Manager",
    "description": "Shows last downloaded file in default file manager",
    "version": "1.0",

    "icons": {  "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
        "downloads"
    ],

    "background": {
        "scripts": ["script.js"],
        "persistent": false
    },
    "commands": {
        "show-last-download": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Show last downloaded file in default file manager"
        }
    }

}
